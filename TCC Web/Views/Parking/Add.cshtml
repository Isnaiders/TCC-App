@using TCC_Web.Models.Base
@using TCC_Web.Models.Enum.Parking
@using TCC_Web.Models.Parking

@{
	ViewData["Title"] = "Cadastrar Estacionamento";
}

@model Parking

@{
    var pageShortTitle = "Novo Estacionamento";
    //var pageFullTitle = string.Format("{0}: {1}", Model.CustomerInfo.DisplayName, pageShortTitle);
    var pageFullTitle = string.Format("{0}: {1}", "Estacionamento", pageShortTitle);

    ViewBag.Title = pageFullTitle;
}

<div class="wrapper wrapper-content animated fadeInUp">
    <form method="post">
        @*@Html.HiddenFor(e => e.CustomerInfo.Id)*@
        <div class="ibox">
            <a class="collapse-link">
                <div class="ibox-title">
                    <h5>Novo Estacionamento</h5>
                    <div class="ibox-tools">
                        <div type="button" class="btn btn-default btn-circle btn-outline btn-xs"><i class="fa fa-chevron-up"></i></div>
                    </div>
                </div>
            </a>
            <div class="ibox-content">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Nome do Estacionamento *</label>
                            @Html.TextBoxFor(m => m.Name, new { Class = "form-control", Placeholder = "Nome do Estacionamento" })
                            @Html.ValidationMessageFor(m => m.Name, "", new { Class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="form-group">
                            <label>Endereço *</label>
                            @Html.TextBoxFor(m => m.Address, new { Class = "form-control", Placeholder = "Endereço" })
                            @Html.ValidationMessageFor(m => m.Address, "", new { Class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Número *</label>
                            @Html.TextBoxFor(m => m.AddressNumber, new { Class = "form-control", Placeholder = "Número" })
                            @Html.ValidationMessageFor(m => m.AddressNumber, "", new { Class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Complemento</label>
                            @Html.TextBoxFor(m => m.Complement, new { Class = "form-control", Placeholder = "Complemento" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        @*<div class="form-group">
                            <label class="control-label"> Selecione a Localização:</label>
                            <select asp-for="LocationType" id="SelectType" class="drop-select" asp-items="Html.GetEnumSelectList<ParkingLocationType>()"></select>
                            @Html.HiddenFor(m => m.LocationType, Model.LocationType)                               
                        </div>*@
                        <div class="form-group">
                            <label>Localização do Estacionamento</label>
                            @Html.DropDownListFor(m => m.LocationType, DropDownListModel.DataEnumerate(Model.LocationType, Model.LocationType.ToString()), new { Class = "form-control" })
                            @*@Html.ValidationMessageFor(m => m.LocationType, "É necessário escolher qual o tipo da localização do estacionamento", new { Class = "text-danger" })*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="ibox" style="margin-top: 10px">
            <div class="row">
                <div class="col-sm-12">
                    <div class="pull-right">
                        <button class="btn btn-sm btn-primary m-t-n-xs" type="submit" id="saveButton"><strong>Salvar</strong></button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
